// vowel: {a,e,i,o,u,A,E,I,O,U}
#include <stdio.h>
int main() {
    char ch;
    printf("Enter a letter: ");
    scanf(" %c",&ch);
    
    //Checking weather the character is vowel or not
    if(ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ||
        ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U'){
            printf("The entered character %c is a vowel.\n",ch);
        }
        else{
            printf("The entered character %c is not a vowel (consonant).\n",ch);
        }
    return 0;
}
