//A Perfect Number is a number that is equal to the sum of its proper divisors (excluding itself).
#include <stdio.h>
int main(){
    int n,sum = 0;
    printf("Enter a number(Positive): ");
    scanf("%d",&n);
    for(int i=1;i<=n/2;i++){
        if(n%i == 0) sum = sum + i;
    }
    if(sum == n){
        printf("%d is a perfect number.\n",n);
    }
    else{
        printf("%d is not a perfect number.\n",n);
    }
    return 0;
}
