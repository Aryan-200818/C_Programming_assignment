#include <stdio.h>
int main(){
    int n,og,sum=0;
    printf("Enter a number: ");
    scanf("%d", &n);
    og = n;
    if (n < 0){
        n = -n;
    }
    if (n == 0){
        sum=0;
    }
    else {
        while (n > 0){
            sum = sum + (n%10);
            n /= 10;
        }
    }
    printf("Sum of digits of %d is: %d\n", og, sum);
    return 0;
}
