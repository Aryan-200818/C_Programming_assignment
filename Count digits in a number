#include <stdio.h>
int main(){
    int n, og, count = 0;
    printf("Enter a number: ");
    scanf("%d", &n);
    og = n;
    if (n < 0){
        n = -n;
    }
    if (n == 0){
        count = 1;
    }
    else {
        while (n > 0){
            count++;
            n /= 10;
        }
    }
    printf("Total number of digits in %d is: %d", og, count);
    return 0;
}
