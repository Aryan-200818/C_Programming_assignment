#include <stdio.h>
int power(int base, int exp) {
    int result = 1;
    for (int i = 0; i < exp; i++) {
        result *= base;
    }
    return result;
}

int main(){
    int n,og,temp,sum = 0,digit=0;
    printf("Enter a number: ");
    scanf("%d",&n);
    og = n;
    temp = n;
    // armstrong number: 153 = (1*1*1) + (5*5*5) + (3*3*3)
    while(n>0){ // counting digits for power function
        digit++;
        n = n/10;
    }
    while(temp>0){
        sum = sum + power(temp%10,digit);
        temp = temp/10;
    }
    if (og == sum){
        printf("Armstrong number.\n");
    }
    else{
        printf("Not a armstrong number.\n");
    }
    return 0;
}
