// #Rules for leap year:
// 1.year should be divisible by 4 and not divisible by 100 or divisible by 400
#include <stdio.h>
int main(){
    int year;
    printf("Enter a year: ");
    scanf("%d",&year);
    
    // checking weather the year is leap year or not
    if ((year % 4 == 0) && (year % 100 != 0) || (year % 400 == 0)){
        printf("The entered year is a leap year\n");
    }
    else{
        printf("The entered year is a not leap year\n");
    }
    return 0;
}
